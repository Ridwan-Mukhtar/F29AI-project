(define (domain submarine)
    (:requirements
        :strips
        :typing
    )

    (:types 
        captain 
        navigator
        bridge
        IAUV
        MAUV
    )

    (:predicates
        (artefact ?a)
        (subLocation ?sL)
        (location ?l)
        (in ?c - object ?r - bridge)
        (at ?a ?l)
        (deploy ?auv - IAUV ?l)
        (onBridge)
        (picture ?a ?l)
    )
    
    (:action nextArea
        :parameters
            (?sL ?l)
        :precondition
            (and
                (subLocation ?sL)
                (location ?l)
                (exists 
                    (?captain - captain ?bridge - bridge ?navigator - navigator) 
                        (and
                            (in ?captain ?bridge)
                            (in ?navigator ?bridge)
                        )
                    )
                (onBridge)
            )
        :effect
            (and
                (when (not(onBridge))
                            (and
                              (onBridge)
                          )
                    )
                (not (subLocation ?sL))
                (subLocation ?l)
                (location ?sL)
            )
    )
    
    (:action getArtefact
        :parameters
            (?sL ?a)
        :precondition
            (and
                (subLocation ?sL)
                (artefact ?a)
                (at ?a ?sl)
                (exists 
                    (?auv - IAUV) 
                        (and
                            (deploy ?auv ?sl)
                        )
                    )
            )
        :effect
            (and
                (picture ?a ?sl)
            )
    )
)
