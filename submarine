(define (domain submarine)
    (:requirements
        :strips
        :typing
    )

    (:types 
        captain navigator
        bridge launchbay
        IAUV MAUV
    )

    (:predicates
        (location ?l)
        (subLocation ?sL)
        (artefact ?a)
        (area ?c ?r)
        (artefactLocation ?a ?l)
        (connected ?room1 ?room2)
        (immobile)
        (takePic)
        (pickArtefact)
    )
    
    (:action moveSub
        :parameters
        (?current ?destination)
        
        :precondition
        (and
            (subLocation ?current)
            (location ?destination)
            (not(immobile))
            (exists 
                (?captain - captain ?bridge - bridge ?navigator - navigator) 
                (and
                    (area ?captain ?bridge)
                    (area ?navigator ?bridge)
                )
            )
        )
        
        :effect
        (and
            (subLocation ?destination)
            (not(subLocation ?current))
            
        )
    )
    
    (:action moveRoom
        :parameters 
        (?person ?room ?current)
        
        :precondition
        (and
            (area ?person ?current)
            (connected ?current ?room)
        )
        
        :effect
        (and
            (area ?person ?room)
            (not(area ?person ?current))
        )
    )
    
    (:action sendUAV
        :parameters
        (?launchbay - launchbay ?AUV ?location)
        
        :precondition
        (and
            (subLocation ?location)
            (exists
                (?IAUV - IAUV ?MAUV - MAUV)
                (and
                    (or(area ?IAUV ?launchbay)
                    (area ?MAUV ?launchbay))
                )
            )
        )
        
        :effect
        (and
            (area ?AUV ?location)
            (not(area ?AUV ?launchbay))
        )
    )
    
    (:action pickupUAV
        :parameters
        (?launchbay - launchbay ?AUV ?location)
        
        :precondition
        (and
            (area ?AUV ?location)
            (subLocation ?location)
        )
        
        :effect
        (and
            (area ?AUV ?launchbay)
            (not(area ?AUV ?location))
        )
    )
    
    (:action picture
        :parameters
        (?AUV ?location ?artefact)
        
        :precondition
        (and
            (location ?location)
            (artefact ?artefact)
            (exists
                (?IAUV - IAUV?)
                (and
                    (area ?IAUV ?location)
                )
            )
        )
        
        :effect
        (and
            (takePic)
        )
    )
)
