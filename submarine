(define (domain submarine)
    (:requirements
        :strips
        :typing
    )

    (:types 
        captain 
        bridge
    )

    (:predicates
        (subLocation ?sL)
        (location ?l)
        (in ?c - captain ?r - bridge)
        (onBridge)
    )
    
    (:action nextArea
        :parameters
            (?sL ?l)
        :precondition
            (and
                (subLocation ?sL)
                (location ?l)
                (exists 
                    (?captain - captain ?bridge - bridge) 
                        (and
                            (in ?captain ?bridge)
                        )
                    )
                (onBridge)
            )
        :effect
            (and
                (when (not(onBridge))
                            (and
                              (onBridge)
                          )
                    )
                (not (subLocation ?sL))
                (subLocation ?l)
                (location ?sL)
            )
    )
)
