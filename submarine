(define (domain submarine)
    (:requirements
        :strips
        :typing
    )

    (:types 
        captain navigator
        bridge launchbay
        IAUV MAUV
    )

    (:predicates
        (area ?c ?r)
        (connected ?room1 ?room2)
        (location ?l)
        (subLocation ?sL)
        (immobile)
    )
    
    (:action moveSub
        :parameters
        (?current ?destination)
        
        :precondition
        (and
            (subLocation ?current)
            (location ?destination)
            (not(immobile))
            (exists 
                (?captain - captain ?bridge - bridge ?navigator - navigator) 
                (and
                    (area ?captain ?bridge)
                    (area ?navigator ?bridge)
                )
            )
        )
        
        :effect
        (and
            (subLocation ?destination)
            (not(subLocation ?current))
            
        )
    )
    
    (:action moveRoom
        :parameters 
        (?person ?room ?current)
        
        :precondition
        (and
            (area ?person ?current)
            (connected ?current ?room)
        )
        
        :effect
        (and
            (area ?person ?room)
            (not(area ?person ?current))
        )
    )
    
    (:action sendUAV
        :parameters
        (?AUV ?location)
        
        :precondition
        (and
            (subLocation ?location)
            (exists
                (?IAUV - IAUV ?MAUV - MAUV ?launchbay - launchbay)
                (and
                    (or(area ?IAUV launchbay)
                    (area ?MAUV launchbay))
                )
            )
        )
        
        :effect
        (and
            (area ?AUV ?location)
        )
    )
)
