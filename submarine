(define (domain submarine)
    (:requirements
        :strips
    )

    (:predicates
        (subLocation ?sL)
        (location ?l)
        (onBridge)
    )
    
    (:action nextArea
        :parameters
            (?sL ?l)
        :precondition
            (and
                (subLocation ?sL)
                (location ?l)
                (onBridge)
            )
        :effect
            (and
                (when (not(onBridge))
                          (and
                              (onBridge)
                          )
                    )
                (not (subLocation ?sL))
                (subLocation ?l)
            )
    )
)
