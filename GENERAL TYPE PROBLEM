(define (problem simpleMovement)
  (:domain submarine)

  (:objects
      loc1
      loc2
      loc3
      artefact
      captain navigator engineer - crew
      bridge launchbay - rooms
      IAUV MAUV - auv
      squid - squids
  )

  (:init
      (subLocation loc1)
      (location loc2)
      (location loc3)
      (artefact artefact)
      
      (area squid loc3)
      (area engineer bridge)
      (area captain bridge)
      (area navigator launchbay)
      (area MAUV launchbay)
      (area IAUV launchbay)
      (area artefact loc2)
      
      (not(immobile))
      (not(takePic))
      (not(pickArtefact))
      (not(electrified))
      
      (connected bridge launchbay)
      (connected launchbay bridge)
  )

  (:goal
      (and
        (electrified)
      )
  )
)
