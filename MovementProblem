(define (problem simpleMovement)
  (:domain submarine)

  (:objects
      loc1
      loc2
      capt - captain
      nav - navigator
      bridge - bridge
      launchbay - launchbay
      IAUV - IAUV
      MAUV - MAUV
  )

  (:init
      (subLocation loc2)
      (location loc1)
      
      (area capt bridge)
      (area nav launchbay)
      (area MAUV launchbay)
      (area IAUV launchbay)
      
      (connected bridge launchbay)
      (connected launchbay bridge)
  )

  (:goal
      (and
        (subLocation loc1)
        (area IAUV loc2)
      )
  )
)
