(define (problem simpleMovement)
  (:domain submarine)

  (:objects
      dock
      loc1
      loc2
      loc3
      loc4
      cap - captain
      bob - bridge
  )

  (:init
      (subLocation dock)
      (location loc1)
      (location loc2)
      (location loc3)
      (location loc4)
      (onBridge)
      (where cap bob)
  )

  (:goal
      (and
        (subLocation loc1)
      )
  )
)
